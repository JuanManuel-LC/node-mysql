<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Itaú Colombia - Maqueta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="/css/form.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"></script>

</head>

<body>

    {{! formulario Iniciar sesion }}
    <div id="container-iniciar" class="formulario container">
        <div class="row justify-content-center">
            <div class="container-form col-md-10">
                <div class="card shadow d-flex flex-row overflow-hidden">

                    <!-- Imagen a la izquierda -->
                    <div class="imagen-form col-md-6 p-0">
                        <img src="/img/8.jpg" alt="Login" class="img-fluid h-100 w-100 object-fit-cover"
                            style="object-fit: cover;" />
                    </div>

                    <!-- Formulario a la derecha -->
                    <div class="col-md-6 p-5">
                        <h2 class="text-center mb-4 fw-bold" style="color: #5f5f5f;">Inicia sesion</h2>


                        <form action="/auth/login" method="post">
                            {{!-- <div class="mb-3">
                                <label for="name" class="form-label">Nombre</label>
                                <input type="text" id="name" name="name" class="input form-control" placeholder="John"
                                    required />
                            </div> --}}

                            <div class="mb-3" style="margin-top: 50px;">
                                <label for="email" class="form-label">Correo
                                    electrónico</label>
                                <input type="email" id="email" name="email" class="input form-control"
                                    placeholder="john@email.com" required />
                            </div>

                            <div class="mb-3">
                                <label for="pass" class="form-label">Contraseña</label>
                                <input type="password" id="pass" name="password" class="input form-control"
                                    placeholder="********" minlength="" style="margin-bottom: 50px;" required />
                            </div>

                            <div class="d-grid">
                                <button type="submit"
                                    style="background-color: #ff6a00; border-radius: 8px; color: #ffffff; border: none; height:40px;">
                                    Ingresar</button>
                            </div>
                            <div class="register">
                                <p>No tienes una cuenta? </p>
                                <a href="#" id="boton_Registrar">Registrarse</a>
                            </div>
                        </form>

                        {{#if message}}
                        <div class="alert alert-info mt-4 text-center">
                            {{message}}
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{!-- Formulario Registrar --}}
    <div id="container-registrar" class="formulario ocultar-container container">
        <div class="row justify-content-center">
            <div class="container-form col-md-10">
                <div class="card shadow d-flex flex-row overflow-hidden">

                    <!-- Formulario a la izquierda -->
                    <div class="col-md-6 p-5">
                        <h2 class="text-center mb-4 fw-bold" style="color: #5f5f5f;">Registrarse</h2>

                        <form id="formRegistro" action="/auth/register" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Nombre</label>
                                <input type="text" id="name" name="name_register" class="input form-control"
                                    placeholder="John" required />
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Correo
                                    electrónico</label>
                                <input type="email" id="email_register" name="email_register" class="input form-control"
                                    placeholder="john@email.com" required />
                            </div>

                            <div class="mb-3">
                                <label for="pass" id="label-pass-one" class="form-label">Contraseña</label>
                                <input type="password" id="pass_register" name="password_register"
                                    class="input form-control" placeholder="********" minlength="" required />
                            </div>
                            <div class="mb-3">
                                <label for="pass" id="label-pass-two" class="form-label">Repetir contraseña</label>
                                <input type="password" id="pass_register_" name="password_register_"
                                    class="input form-control" placeholder="********" minlength="" required />
                            </div>

                            <div class="d-grid">
                                <button type="submit"
                                    style="background-color: #ff6a00; border-radius: 8px; color: #ffffff; border: none; height:40px; margin-top:40px;">
                                    Ingresar</button>
                            </div>
                            <div class="register">
                                <p>Ya tienes una cuenta? </p>
                                <a href="#" id="boton_Iniciar">Iniciar sesión</a>
                            </div>
                        </form>

                        {{!-- {{#if message}}
                        <div class="alert alert-info mt-4 text-center">
                            {{message}}
                        </div>
                        {{/if}} --}}
                        <button>mostrar toast</button>
                    </div>
                    <!-- Imagen a la derecha -->
                    <div class="imagen-form col-md-6 p-0">
                        <img src="/img/10.jpg" alt="Login" class="img-fluid h-100 w-100 object-fit-cover"
                            style="object-fit: cover;" />
                    </div>
                </div>
            </div>
        </div>
    </div>






    <script src="/js/form.js"></script>
    <script src="/js/pass.js"></script>
</body>