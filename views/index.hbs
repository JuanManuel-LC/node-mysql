<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Itaú Colombia - Maqueta</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
        />

        <link rel="stylesheet" href="/style.css" />
    </head>
    <body>

        {{! formulario 2 }}
        <div id="formulario" class="container">
            <div class="row justify-content-center">
                <div class="container-form col-md-10">
                    <div class="card shadow d-flex flex-row overflow-hidden">

                        <!-- Imagen a la izquierda -->
                        <div class="imagen-form col-md-6 p-0">
                            <img
                                src="/img/8.jpg"
                                alt="Login"
                                class="img-fluid h-100 w-100 object-fit-cover"
                                style="object-fit: cover;"
                            />
                        </div>

                        <!-- Formulario a la derecha -->
                        <div class="col-md-6 p-4">
                            <h2
                                class="text-center mb-4 fw-bold"
                                style="color: #5f5f5f;"
                            >Inicia sesion</h2>

                            <div class="text-center mb-3">
                                <a href="/login" class="btn btn-link">Ir al
                                    login page</a>
                            </div>

                            <form action="/auth/login" method="post">
                                <div class="mb-3">
                                    <label
                                        for="name"
                                        class="form-label"
                                    >Nombre</label>
                                    <input
                                        type="text"
                                        id="name"
                                        name="name"
                                        class="input form-control"
                                        placeholder="John"
                                        required
                                    />
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Correo
                                        electrónico</label>
                                    <input
                                        type="email"
                                        id="email"
                                        name="email"
                                        class="input form-control"
                                        placeholder="john@email.com"
                                        required
                                    />
                                </div>

                                <div class="mb-3">
                                    <label
                                        for="pass"
                                        class="form-label"
                                    >Contraseña</label>
                                    <input
                                        type="password"
                                        id="pass"
                                        name="password"
                                        class="input form-control"
                                        placeholder="********"
                                        minlength=""
                                        required
                                    />
                                </div>

                                <div class="d-grid">
                                    <button
                                        type="submit"
                                        style="background-color: #ff6a00; border-radius: 8px; color: #ffffff; border: none; height:40px;"
                                    >
                                        Ingresar</button>
                                </div>
                            </form>

                            {{#if message}}
                                <div class="alert alert-info mt-4 text-center">
                                    {{message}}
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
        